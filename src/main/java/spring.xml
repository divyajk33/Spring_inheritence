<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="child" class="com.shiva.beans.Child">
<!-- Here we are configuring parent properties in the child class Configuration -->
<property name="money" value="100"></property>
<property name="propDocs" value="debtdocs"></property>
<property name="diseases" value="nodiseases"></property>
<property name="badHabbits" value="smoking"></property>
<property name="knowledge" value="null"></property>

</bean>
</beans>
